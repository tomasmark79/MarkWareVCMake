{
    /* (c) Tom√°≈° Mark 2024 */
    "version": "2.0.0",
    "inputs": [
        {
            /* SPECIAL MENU ITEMS */
            "id": "specialTaskName",
            "type": "pickString",
            "description": "Select MarkWare Special Task",
            "options": [
                "Permutate scenarios ‚òï"
            ],
            "default": "Permutate scenarios ‚òï"
        },
        {
            /* MENU ITEMS */
            "id": "taskName",
            "type": "pickString",
            "description": "Select MarkWare Task",
            "options": [
                "üöÄ Zero to Build",
                "ü¶∏ Zero to Hero",
                "üßπ Clean folder",
                "üó°Ô∏è Conan install",
                "üîß CMake configure",
                "ü™≤ CMake configure with debugger",
                "üî® Build",
                "üìú Collect Licenses",
                "üìå Install Artefacts",
                "üì¶ Release Tarballs",
                "üõ∏ Run CPack",
                "",
                "‚öîÔ∏è conan graph.html",
                "üîç clang-tidy",
                "üìê clang-format",
                "üìè cmake-format"
            ],
            "default": "üî® Build"
        },
        {
            /* PRODUCT ITEMS */
            "id": "buildProduct",
            "type": "pickString",
            "description": "Select target product",
            "options": [
                "standalone",
                "library",
                "both"
            ],
            "default": "standalone"
        },
        {
            /* ARCH ITEMS */
            "id": "buildArch",
            "type": "pickString",
            "description": "Select target architecture",
            "options": [
                "default", /* this is system default compiler */
                "x86_64-clang-linux-gnu",
                "x86_64-w64-mingw32",
                "aarch64-rpi4-linux-gnu"
            ],
            "default": "default"
        },
        {
            /* BUILD TYPE ITEMS */
            "id": "buildType",
            "type": "pickString",
            "description": "Select type of build",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
                "MinSizeRel"
            ],
            "default": "Debug"
        },
    ],
    "tasks": [
        {
            "label": "Launch Standalone",
            "type": "shell",
            "command": "${workspaceFolder}/Build/Standalone/default/Debug/VCMStandalone",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Launch Standalone",
            "problemMatcher": [],
            "dependsOn": [
                /* "clear terminal" */ /* uncomment if you want to clear terminal before each task */
            ]
        },
        {
            /* SPECIAL TASKS RUN */
            "label": "MarkWare Special Tasks",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/SolutionController.py",
                "${input:specialTaskName}",
                "independent_parameter"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "MarkWare Special Tasks",
            "problemMatcher": [],
            "dependsOn": [
                /* "clear terminal" */ /* uncomment if you want to clear terminal before each task */
            ]
        },
        {
            /* TASKS RUN */
            "label": "MarkWare Tasks",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/SolutionController.py",
                "${input:buildProduct}",
                "${input:taskName}",
                "${input:buildArch}",
                "${input:buildType}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "MarkWare Tasks",
            "problemMatcher": [],
            "dependsOn": [
                /* "clear terminal" */ /* uncomment if you want to clear terminal before each task */
            ]
        },
        {
            /* DIRECT BUILD (NO MENU) */
            "label": "Direct Build",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/SolutionController.py",
                "standalone",
                "üî® Build",
                "default",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Direct Build",
            "problemMatcher": []
        },
        {
            /* DIRECT CLANG-TIDY C/C++ ( NEED MENU )  */
            "label": "clang-tidy",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/SolutionController.py",
                "${input:buildProduct}",
                "üîç clang-tidy",
                "${input:buildArch}",
                "${input:buildType}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "clang-tidy",
            "problemMatcher": []
        },
        {
            /* DIRECT CLANG-FORMAT ( NO MENU ) */
            "label": "clang-format",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/SolutionController.py",
                "both",
                "üìê clang-format",
                "independent_parameter"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "clang-format",
            "problemMatcher": []
        },
        {
            /* DIRECT CMAKE-FORMAT ( NO MENU ) */
            "label": "cmake-format",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/SolutionController.py",
                "both",
                "üìè cmake-format",
                "independent_parameter"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "cmake-format",
            "problemMatcher": []
        },
        { /* clear terminal */
            "label": "clear terminal",
            "type": "shell",
            "command": "clear",
            "group": "none",
            "problemMatcher": []
        }
    ]
}