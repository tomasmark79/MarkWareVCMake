{
    /* (c) Tomáš Mark 2024 */
    "version": "2.0.0",
    "tasks": [
        { /* clear terminal */
            "label": "clear terminal",
            "type": "shell",
            "command": "clear",
            "group": "none",
            "problemMatcher": []
        },
        {
            /* CMAKE TASKS */
            "label": "CMake Tasks",
            "type": "shell",
            "command": "${workspaceFolder}/CMakeController.sh",
            "args": [
                "${input:taskName}",
                "${input:archBuildType}",
                "${input:buildType}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "CMake Tasks",
            "problemMatcher": [],
            "dependsOn": [
                "clear terminal"
            ]
        },
        {
            /* LINT */
            "label": "lint",
            "type": "shell",
            "command": "find",
            "args": [
                "${workspaceFolder}",
                "-not",
                "-path",
                "\"${workspaceFolder}/Build/*\"",
                "\\(",
                "-name",
                "\"*.c\"",
                "-o",
                "-name",
                "\"*.cpp\"",
                "-o",
                "-name",
                "\"*.h\"",
                "-o",
                "-name",
                "\"*.hpp\"",
                "\\)",
                "-exec",
                "clang-tidy",
                "{}",
                "+"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for linting C++ files with clang-tidy.",
        },
        {
            /* CLANG FORMAT */
            "label": "clang-format",
            "type": "shell",
            "command": "find",
            "args": [
                "${workspaceFolder}",
                "-not",
                "-path",
                "\"${workspaceFolder}/Build/*\"",
                "-not",
                "-path",
                "\"${workspaceFolder}/CMakeFiles/*\"",
                "\\(",
                "-name",
                "\"*.c\"",
                "-o",
                "-name",
                "\"*.cpp\"",
                "-o",
                "-name",
                "\"*.h\"",
                "-o",
                "-name",
                "\"*.hpp\"",
                "\\)",
                "-exec",
                "clang-format",
                "-i",
                "{}",
                "+"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Generated task for formatting C++ files with clang-format.",
        },
        {
            /* CMAKE FORMAT */
            "label": "cmake-format",
            "type": "shell",
            "command": "find",
            "args": [
                "${workspaceFolder}",
                "-not",
                "-path",
                "\"${workspaceFolder}/Build/*\"",
                "\\(",
                "-name",
                "\"CMakeLists.txt\"",
                "-o",
                "-name",
                "\"*.cmake\"",
                "\\)",
                "-exec",
                "cmake-format",
                "-i",
                "{}",
                "+"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Generated task for formatting CMake files with cmake-format.",
        }
    ],
    "inputs": [
        {
            "id": "taskName",
            "type": "pickString",
            "description": "Select CMake task",
            "options": [
                
                "Build (Library)",
                "Build (Standalone)",
                "Build All",
                "--------------------------",
                "Configure (Library)",
                "Configure (Standalone)",
                "Configure All",
                "Conan Install (Library)",
                "Conan Install (Standalone)",
                "Conan Install All",
                "Clean (Standalone)",
                "Clean (Library)",
                "Clean All",
                "Install (Standalone)",
                "Install (Library)",
                "Write Licenses (Library)",
                "Write Licenses (Standalone)",
                "Write Licenses All"

            ],
            "default": "Build All"
        },
        {
            "id": "archBuildType",
            "type": "pickString",
            "description": "Select architecture",
            "options": [
                "Native",
                "Aarch64"
            ],
            "default": "Native"
        },
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select build type",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
                "MinSizeRel"
            ],
            "default": "Debug"
        }
    ]
}